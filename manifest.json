{
    "manifest_version": 3,
    "name": "Gmeet tracker",
    "version": "1.0.0",
    "description": "Track the order in which participants join a Google Meet room",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://meet.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Meet Attendance Tracker",
        "default_icon": {
            "16": "icons/icon16.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}
